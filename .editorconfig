root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
indent_size = 4
tab_width = 4
indent_style = tab
trim_trailing_whitespace = true

[*.md]
tab_width = 4
indent_size = 4
indent_style = tab
trim_trailing_whitespace = false

[*.{js,ts}]
tab_width = 2
indent_size = 2
indent_style = space
indent_brace_style = stroustrup
trim_trailing_whitespace = true
insert_final_newline = true

[*.{jsx,tsx}]
tab_width = 4
indent_size = 4
indent_style = tab
indent_brace_style = stroustrup
trim_trailing_whitespace = true
insert_final_newline = true
